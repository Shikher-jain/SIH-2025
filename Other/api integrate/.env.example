# Environment Variables Template
# Copy this file to .env and update the values

# Model Configuration
MODEL_PATH=model.h5
MODEL_NAME=cnn_multimodal_model

# API Configuration
APP_NAME=CNN Multi-Modal Prediction API
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_IMAGE_EXTENSIONS=.tif,.tiff,.png,.jpg,.jpeg
ALLOWED_NPY_EXTENSIONS=.npy
ALLOWED_CSV_EXTENSIONS=.csv

# Model Input Configuration
IMAGE_INPUT_WIDTH=224
IMAGE_INPUT_HEIGHT=224
IMAGE_INPUT_CHANNELS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Database (if needed)
# DATABASE_URL=sqlite:///./app.db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=api_db
# DATABASE_USER=api_user
# DATABASE_PASSWORD=your_password

# Security (if needed)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# ALGORITHM=HS256

# External APIs (if needed)
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# Monitoring (if needed)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Performance Settings
WORKERS=1
WORKER_CONNECTIONS=1000
KEEPALIVE=2